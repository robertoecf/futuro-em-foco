{
  "threshold": 10,
  "minLines": 15,
  "minTokens": 100,
  "ignore": [
    "**/node_modules/**",
    "**/dist/**",
    "**/build/**",
    "**/*.md",
    "**/*.json",
    "src/components/ui/**",
    "src/styles/**",
    "**/*.test.ts",
    "**/*.spec.ts"
  ],
  "reporters": ["console"],
  "format": ["typescript", "javascript", "tsx", "jsx"],
  "blame": false,
  "silent": false
}
