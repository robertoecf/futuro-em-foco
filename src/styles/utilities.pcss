#hero-banner h1,
#cta-banner h1,
.aurora-banner .text-white,
.aurora-banner h1, .aurora-banner h2, .aurora-banner h3,
.tech-button-specialist-cta {
  color: #FEFFFB !important;
}

.aurora-banner p {
  color: #FEFFFB !important;
  opacity: 0.9;
}

/* ===== OVERRIDE FINAL ===== */
/* Forçar texto branco nos títulos dos banners em todos os modos */
#hero-banner h1,
#cta-banner h1 {
  color: white !important;
}

.tech-button-specialist-cta {
