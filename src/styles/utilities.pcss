  border: 1px solid rgba(255, 255, 255, 0.08);
}

/* Custom Input Styling - Seguindo padrão dos outros elementos */
/* Base styles for glass-input */
.glass-input {
  border-radius: 8px !important;
  transition: all 0.3s ease !important;
  position: relative !important;
}

/* Dark mode styles */
.dark .glass-input {
  background: transparent !important;
  border: 1px solid rgba(255, 255, 255, 0.08) !important;
  color: white !important;
}

.dark .glass-input:focus {
  outline: none !important;
  border-color: rgba(228, 130, 0, 0.5) !important;
  box-shadow: 
    0 0 0 3px rgba(228, 130, 0, 0.1),
    0 4px 12px rgba(228, 130, 0, 0.2) !important;
  ring: none !important;
}

.dark .glass-input::placeholder {
  color: rgb(156, 163, 175) !important;
}

/* Remove setas padrão dos inputs numéricos */
.glass-input::-webkit-outer-spin-button,
.glass-input::-webkit-inner-spin-button {
  -webkit-appearance: none !important;
  margin: 0 !important;
}

.glass-input[type=number] {
  -moz-appearance: textfield !important;
}

/* Container para input com setas customizadas */
.input-with-arrows {
  position: relative;
  display: flex;
  align-items: center;
  width: 120px;
}

.input-with-arrows input {
  width: 100% !important;
  height: 36px !important;
  padding: 8px 32px 8px 12px !important;
  font-size: 14px !important;
}

/* Setas customizadas minimalistas */
.input-arrows {
  position: absolute;
  right: 8px;
  display: flex;
  flex-direction: column;
  gap: 2px;
  z-index: 10;
}

/* Base styles for input arrows */
.input-arrow {
  width: 14px;
  height: 14px;
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
  transition: all 0.3s ease;
  user-select: none;
  font-size: 9px;
  font-weight: 300;
  color: rgba(0, 0, 0, 0.4);
}

.input-arrow:hover {
  color: rgba(0, 0, 0, 0.8);
  transform: translateY(-1px);
}

.input-arrow:active {
  transform: translateY(0);
  color: rgba(228, 130, 0, 0.8);
}

/* Dark mode styles for input arrows */
.dark .input-arrow {
  color: rgba(255, 255, 255, 0.4);
}

.dark .input-arrow:hover {
  color: rgba(255, 255, 255, 0.8);
  transform: translateY(-1px);
}

/* Theme-aware form inputs */
.themed-input {
  @apply dark:bg-black/20 bg-white/50 
         border dark:border-white/30 border-gray-300 
         dark:text-white text-gray-900 
         dark:placeholder:text-white/60 placeholder:text-gray-500 
         dark:focus:bg-black/20 focus:bg-white/70 
         dark:focus:border-white/30 focus:border-gray-400 
         dark:focus:text-white focus:text-gray-900 
         focus-visible:ring-0 focus-visible:ring-offset-0;
}

.themed-label {
  @apply dark:text-white text-gray-900;
}

.themed-select-content {
  @apply dark:bg-black/80 bg-white border dark:border-white/10 border-gray-200;
}

.themed-select-item {
  @apply dark:text-white text-gray-900 dark:hover:bg-black/80 hover:bg-gray-100;
}

