/* Variáveis CSS para transparências */
:root {
  --glass-transparency: 0.033;
}

/* Painéis de Vidro Inteligente - Camada 3 da Hierarquia */
.glass-panel {
  background: transparent;
  border: none;
  border-radius: 0;
  box-shadow: none;
  backdrop-filter: none;
  -webkit-backdrop-filter: none;
}

.glass-panel::before {
  display: none;
}

.glass-panel:hover::before {
  display: none;
}

.glass-panel:hover {
  transform: none;
  box-shadow: none;
}
/* Cards Refinados - Base styles (Light mode) */
.glass-card {
  background: rgba(255, 255, 255, 0.7);
  backdrop-filter: blur(2px);
  border: 1px solid rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
}

/* Dark mode styles for glass-card */
.dark .glass-card {
  background: rgba(255, 255, 255, var(--glass-transparency));
  border: 1px solid rgba(255, 255, 255, 0.08);
}

/* Insight Cards Especializado - Base styles (Light mode) */
.insight-card {
  background: rgba(255, 255, 255, 0.7);
  backdrop-filter: blur(2px);
  border: 1px solid rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
}

/* Dark mode styles for insight-card */
.dark .insight-card {
  background: rgba(255, 255, 255, var(--glass-transparency));
  border: 1px solid rgba(255, 255, 255, 0.08);
}

/* Monte Carlo Results Cards */
.monte-carlo-card {
  background: var(--theme-surface-container-bg);
  backdrop-filter: blur(2px);
  -webkit-backdrop-filter: blur(2px);
  border: 2px solid transparent;
  border-radius: 16px;
  background-clip: padding-box;
  box-shadow: 
    0 0 20px rgba(255, 255, 255, 0.06),
    0 0 40px rgba(255, 255, 255, 0.03),
    inset 0 1px 0 rgba(255, 255, 255, 0.15);
  position: relative;
  overflow: hidden;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.monte-carlo-card::before {
  content: '';
  position: absolute;
  inset: 0;
  padding: 2px;
  background: var(--tech-gradient-glass);
  border-radius: inherit;
  mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0);
  mask-composite: exclude;
  -webkit-mask-composite: xor;
}

/* Chart Container - Base styles (Light mode) */
.chart-container {
  position: relative;
  width: 100%;
  height: 400px;
  margin-top: 20px;
  background: rgba(255, 255, 255, 0.7);
  backdrop-filter: blur(2px);
  border: 1px solid rgba(0, 0, 0, 0.1);
  border-radius: 16px;
}

/* Dark mode styles for chart-container */
.dark .chart-container {
  background: rgba(255, 255, 255, var(--glass-transparency));
  border: 1px solid rgba(255, 255, 255, 0.08);
}

/* Chart Info Cards - Base styles (Light mode) */
.chart-info-card {
  background: rgba(255, 255, 255, 0.7);
  backdrop-filter: blur(2px);
  border: 1px solid rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
}

/* Dark mode styles for chart-info-card */
.dark .chart-info-card {
  background: rgba(255, 255, 255, var(--glass-transparency));
  border: 1px solid rgba(255, 255, 255, 0.08);
}

/* === ANIMAÇÕES TECNO-ETÉREAS === */

/* Animations removed for instant loading performance */

/* Investor Profile Cards with Enhanced Hover Effects - Base styles (Light mode) */
.investor-card {
  background: rgba(255, 255, 255, 0.7);
  backdrop-filter: blur(2px);
  border: 1px solid rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

/* Dark mode styles for investor-card */
.dark .investor-card {
  background: rgba(255, 255, 255, var(--glass-transparency));
  border: 1px solid rgba(255, 255, 255, 0.08);
}

.investor-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(
    90deg,
    transparent,
    rgba(255, 165, 0, 0.1),
    transparent
  );
  transition: left 0.6s ease;
}

.investor-card:hover {
  transform: translateY(-8px) scale(1.02);
  box-shadow: 
    0 20px 40px rgba(0, 0, 0, 0.3),
    0 10px 20px rgba(255, 165, 0, 0.2),
    0 0 30px rgba(255, 165, 0, 0.1);
  border-color: rgba(255, 165, 0, 0.3);
}

.investor-card:hover::before {
  left: 100%;
}

.investor-card.active {
  border-width: 2px;
  box-shadow: 
    0 12px 24px rgba(0, 0, 0, 0.1),
    inset 0 1px 0 rgba(255, 255, 255, 0.08);
}

/* --- CONSERVADOR --- */
.dark .investor-card-conservador.active {
  background: linear-gradient(145deg, rgba(59, 130, 246, 0.15), rgba(17, 24, 39, 0.1) 70%);
  border-color: rgba(59, 130, 246, 0.4);
}
:not(.dark) .investor-card-conservador.active {
  background: linear-gradient(145deg, rgba(59, 130, 246, 0.1), rgba(224, 224, 224, 0.1) 70%);
  border-color: rgba(59, 130, 246, 0.4);
}

/* --- MODERADO --- */
.dark .investor-card-moderado.active {
  background: linear-gradient(145deg, rgba(249, 115, 22, 0.15), rgba(17, 24, 39, 0.1) 70%);
  border-color: rgba(249, 115, 22, 0.4);
}
:not(.dark) .investor-card-moderado.active {
  background: linear-gradient(145deg, rgba(249, 115, 22, 0.1), rgba(224, 224, 224, 0.1) 70%);
  border-color: rgba(249, 115, 22, 0.4);
}

/* --- ARROJADO --- */
.dark .investor-card-arrojado.active {
  background: linear-gradient(145deg, rgba(239, 68, 68, 0.15), rgba(17, 24, 39, 0.1) 70%);
  border-color: rgba(239, 68, 68, 0.4);
}
:not(.dark) .investor-card-arrojado.active {
  background: linear-gradient(145deg, rgba(239, 68, 68, 0.1), rgba(224, 224, 224, 0.1) 70%);
  border-color: rgba(239, 68, 68, 0.4);
}

/* Recommendation Cards - Base styles (Light mode) */
.recommendation-card {
  background: rgba(255, 255, 255, 0.7);
  backdrop-filter: blur(2px);
  border: 1px solid rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
}

/* Dark mode styles for recommendation-card */
.dark .recommendation-card {
  background: rgba(255, 255, 255, var(--glass-transparency));
  border: 1px solid rgba(255, 255, 255, 0.08);
}

/* === UTILITÁRIOS TECNO-ETÉREOS === */

.glass-input {
  background: var(--theme-surface-glass);
  backdrop-filter: blur(2px);
  -webkit-backdrop-filter: blur(2px);
  border: 1px solid rgba(255, 255, 255, 0.05);
  border-radius: 8px;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.glass-input:focus {
  outline: none;
  border-color: rgba(228, 130, 0, 0.5);
  box-shadow: 
    0 0 0 3px rgba(228, 130, 0, 0.1),
    0 4px 12px rgba(228, 130, 0, 0.2);
}

/* Elementos com Fonte Tech */
.tech-number {
  font-family: 'JetBrains Mono', monospace;
  font-weight: 600;
  color: var(--theme-primary);
}

.tech-label {
  font-family: 'JetBrains Mono', monospace;
  font-size: 0.75rem;
  font-weight: 500;
  text-transform: uppercase;
  letter-spacing: 0.1em;
  color: var(--theme-text-secondary);
}

/* === COMPATIBILIDADE COM CLASSES EXISTENTES === */

/* Manter compatibilidade com classes antigas durante transição */
.liquid-glass {
  @apply glass-panel;
}

/* Section Navigation Arrows */
.section-arrow {
  font-size: 1.5rem;
  color: rgba(255, 255, 255, 0.4);
  cursor: pointer;
  transition: all 0.3s ease;
  user-select: none;
  font-weight: 300;
}

.section-arrow:hover {
  color: rgba(255, 255, 255, 0.8);
  transform: translateY(2px);
}

.dark .section-arrow {
  color: white !important;
}

/* Smooth Scroll Behavior */
html {
  scroll-behavior: smooth;
}

/* Magic Moment - Desativar TODAS as animações e movimentações desnecessárias */
.magic-moment-active * {
  animation-duration: 0s !important;
  animation-delay: 0s !important;
  transition-duration: 0s !important;
  transition-delay: 0s !important;
  transform: none !important;
  cursor: none !important;
}

/* Exceções APENAS para elementos essenciais dentro do gráfico e mensagens */
.magic-moment-active .aurora-loader,
.magic-moment-active .aurora-dot,
.magic-moment-active .animate-pulse,
.magic-moment-active .chart-container *,
.magic-moment-active .projecting-message *,
.magic-moment-active .recharts-wrapper * {
  animation-duration: revert !important;
  animation-delay: revert !important;
  transition-duration: revert !important;
  transition-delay: revert !important;
  transform: revert !important;
}

/* Força a animação do loading mesmo quando outras animações estão desativadas */
.aurora-loader {
  animation: unset !important;
}

.aurora-dot {
  animation: sequencial-pulse 1.2s ease-in-out infinite !important;
  animation-delay: var(--delay) !important;
}

/* Permitir apenas transições específicas para fade-out da lâmina preta */
.magic-moment-active .transition-opacity {
  transition-duration: revert !important;
  transition-delay: revert !important;
}

/* Section Spacing */
.section-divider {
  height: 1px;
  background: linear-gradient(
    90deg,
    transparent,
    rgba(255, 255, 255, 0.1),
    transparent
  );
  margin: 2rem 0;
}

/* Loading Circular - FOCOS DE LUZ COLORIDOS */
.aurora-loader {
  position: relative !important;
  width: 80px !important;
  height: 80px !important;
  margin: 0 auto !important;
}

.aurora-dot {
  position: absolute !important;
  width: 14px !important;
  height: 14px !important;
  border-radius: 50% !important;
  opacity: 0.3 !important;
  animation: aurora-sync-pulse 1.8s ease-in-out infinite !important;
  box-shadow: 0 0 8px currentColor !important;
  transition: all 0.3s ease !important;
  transform-origin: center !important;
}

/* Cores e posições dos focos de luz - 12 pontos sincronizados com 6 cores vibrantes */
.aurora-dot:nth-child(1) { 
  background: #4A90E2 !important; /* Azul */
  top: 18px !important; left: 50% !important; margin-left: -7px !important;
}
.aurora-dot:nth-child(2) { 
  background: #50C878 !important; /* Verde */
  top: 22px !important; right: 22px !important;
}
.aurora-dot:nth-child(3) { 
  background: #FF8C00 !important; /* Laranja */
  top: 35px !important; right: 12px !important;
}
.aurora-dot:nth-child(4) { 
  background: #FF4444 !important; /* Vermelho */
  top: 50% !important; right: 18px !important; margin-top: -7px !important;
}
.aurora-dot:nth-child(5) { 
  background: #9B59B6 !important; /* Roxo */
  bottom: 35px !important; right: 12px !important;
}
.aurora-dot:nth-child(6) { 
  background: #FFD700 !important; /* Dourado */
  bottom: 22px !important; right: 22px !important;
}
.aurora-dot:nth-child(7) { 
  background: #4A90E2 !important; /* Azul */
  bottom: 18px !important; left: 50% !important; margin-left: -7px !important;
}
.aurora-dot:nth-child(8) { 
  background: #50C878 !important; /* Verde */
  bottom: 22px !important; left: 22px !important;
}
.aurora-dot:nth-child(9) { 
  background: #FF8C00 !important; /* Laranja */
  bottom: 35px !important; left: 12px !important;
}
.aurora-dot:nth-child(10) { 
  background: #FF4444 !important; /* Vermelho */
  top: 50% !important; left: 18px !important; margin-top: -7px !important;
}
.aurora-dot:nth-child(11) { 
  background: #9B59B6 !important; /* Roxo */
  top: 35px !important; left: 12px !important;
}
.aurora-dot:nth-child(12) { 
  background: #FFD700 !important; /* Dourado */
  top: 22px !important; left: 22px !important;
}

/* Animação sincronizada - todas as bolinhas brilham juntas até 100% */
@keyframes aurora-sync-pulse {
  0% { 
    opacity: 0.3 !important; 
    transform: scale(1) !important;
    box-shadow: 0 0 8px currentColor !important; 
  }
  
  50% { /* Todas brilham até 100% juntas */
    opacity: 1 !important; 
    transform: scale(1.4) !important;
    box-shadow: 0 0 30px currentColor, 0 0 60px currentColor, 0 0 90px currentColor !important; 
  }
  
  100% { 
    opacity: 0.3 !important; 
    transform: scale(1) !important;
    box-shadow: 0 0 8px currentColor !important; 
  }
}

/* Animação do texto que pulsa sincronizado com as bolinhas */
@keyframes text-sync-pulse {
  0%, 100% {
    opacity: 0.8 !important;
    transform: scale(1) !important;
  }
  
  50% {
    opacity: 1 !important;
    transform: scale(1.03) !important;
    text-shadow: 0 0 15px rgba(255, 255, 255, 0.5) !important;
  }
}

/* Classe para texto do momento mágico */
.magic-moment-text {
  animation: text-sync-pulse 1.5s ease-in-out infinite !important;
}

/* Results Card Effects - Boxes menores em segunda camada - Base styles (Light mode) */
.results-card {
  background: rgba(255, 255, 255, 0.7);
  backdrop-filter: blur(2px);
  border: 1px solid rgba(0, 0, 0, 0.1);
  border-radius: 16px;
  transition: all 0.3s ease;
}

/* Dark mode styles for results-card */
